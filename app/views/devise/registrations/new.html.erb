
<div class="window">
<h2>Jetzt registrieren</h2>
  <%= @errors %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'pure-form pure-form-stacked'}) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, placeholder: 'E-Mail Adresse', value: (params['user'] ? params['user']['email'] : nil) %>
  </div>

  <div class="field">
    <%= f.label 'Vor- und Nachname' %>
    <%= f.text_field :first_name, placeholder: 'Vorname', value: (params['user'] ? params['user']['first_name'] : nil) %>
    <%= f.text_field :last_name, placeholder: 'Nachname', value: (params['user'] ? params['user']['last_name'] : nil) %>
  </div>

  <div class="field">
    <%= f.label 'Passwort', :password %>
    <% if @minimum_password_length %>
    <small><em>(Mindestens <%= @minimum_password_length %> Zeichen)</em></small>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: '***', value: (params['user'] ? params['user']['password'] : nil) %>
  </div>

  <div class="field">
    <%= f.label 'Passwort bestÃ¤tigen', :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: '***', value: (params['user'] ? params['user']['password_confirmation'] : nil) %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "Registrieren", class: 'pure-button pure-button-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>